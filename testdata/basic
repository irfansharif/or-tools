sat
model.name(m)
model.vars(x to z in [0, 2])
model.constants(a, b == 2)
model.constants(c == 1)
----

sat
constrain.all-different(x, y, z)
constrain.all-same(x, a)
constrain.all-same(y, c)
----

sat
model.literals(d to f)
constrain.boolean-and(d, e)
constrain.boolean-and(f) if d, e
----

sat
model.print()
----
model=m
  variables (num = 3)
    x in [0, 2]
    y in [0, 2]
    z in [0, 2]
  constants (num = 3)
    a == 2
    b == 2
    c == 1
  literals (num = 3)
    d, e, f
  constraints (num = 5)
    all-different: x, y, z
    all-same: x, a
    all-same: y, c
    boolean-and: d, e
    boolean-and: f if (d, e)

sat
model.validate()
----
ok

sat
model.solve()
----
optimal

sat
result.values(a to c, x to z)
----
a = 2
b = 2
c = 1
x = 2
y = 1
z = 0

sat
result.bools(d to f)
----
d = true
e = true
f = true
